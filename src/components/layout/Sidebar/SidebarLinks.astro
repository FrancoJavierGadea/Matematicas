---
import SidebarLinkItem from "./SidebarLinkItem.astro";
const {links} = Astro.props;
---

<ul class="links">
    {
        links.map((link) => {

            return <SidebarLinkItem item={link} class="link-item" />	
        })
    }
</ul>

<style>
    .links {
        list-style: none;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 20px;

        
        *[data-folder-links] {
            order: 1;
        }

        *[data-link] {
            order: 2;
        }	
    }
</style>