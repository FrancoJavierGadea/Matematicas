---
import 'bootstrap/dist/css/bootstrap.min.css';
import 'bootstrap-icons/font/bootstrap-icons.min.css';
import bootstrap from 'bootstrap/dist/js/bootstrap.bundle.js?url';

// import 'katex/dist/katex.min.css';
// import '../css/Custom-katex.css';
import '../css/Custom-mathjax.css';
//import '../css/github-markdown-dark.css';
import '../css/github-markdown-light.css';
import Navigation from './Navigation.astro';
import NavigationSideBar from './NavigationSideBar/NavigationSideBar.astro';

const { title, showSidebar, sideBarLinks, sideBarTitle } = Astro.props;

const navigationLinks = [
	{ name: 'inicio', url: '/' },
	{ 
		name: 'Trigonometria',
		url: '/trigonometria',
		children: [
			{name: 'Resumen', url: '/trigonometria/resumen'},
			{name: 'Identidades trigonometricas', url: '/trigonometria/identidades-trigonometricas'}
		]
	},
	{
		name: 'Funciones',
		url: '/funciones',
		children: [
			{name: 'Ejemplos', url: '/funciones/ejemplos'}
		]
	},
	{
		name: 'Algebra',
		url: '/algebra',
		children: [
			{name: 'Regla de Ruffini', url: '/algebra/ruffini'}
		]
	}
];
---

<!DOCTYPE html>

<html lang="es">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<meta name="description" content="Astro description" />

		<title>{title}</title>
	</head>
	<body>

		<Navigation links={navigationLinks}>

			<span slot="brand">Matematicas</span>

			{
				showSidebar &&
				<button class="btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#Navigation-side-bar" slot="control">
					<i class="bi bi-journal-text"></i>
				</button>
			}
		</Navigation>

		<div class="page-content">

			{
				showSidebar &&
				<NavigationSideBar id="Navigation-side-bar" title={sideBarTitle} links={sideBarLinks} />
			}

			<main class="container">
				<slot />
			</main>
		</div>
		
		<script is:inline src={bootstrap}></script>
	</body>
</html>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+Math&display=swap');

	:root {
		--font-math: "Noto Sans Math", sans-serif;
		--nav-height: 70px;
	}

	.page-content {

		display: flex;

		& > * {
			flex-grow: 1;
		}
	}
	
	main {
		padding: 20px 0;
		display: flex;
		flex-direction: column;
		gap: 50px;
		overflow: hidden;
	}

</style>
